<Window x:Class="FitnessProgram.MemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessProgram"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Title="MemberWindow" Height="1080" Width="1920"
        Icon="/Icon">
    
    <Grid Background="Black">

        <!-- Grid row layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- row 0 -->
            <RowDefinition Height="600"/>
            <!-- row 1 -->
         
        </Grid.RowDefinitions>
        
        <!--Printer listen af medlemmmer ud-->
        <TextBlock 
            Grid.Row="1"
            x:Name="MemberBlock" 
            Foreground="White"
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Margin="0,0,0,0" 
            TextWrapping="Wrap" 
            Text="TextBlock"/>
        
        <Label 
            Grid.Row="0"
            Content="Medlemmer" 
            Foreground="White"
            HorizontalAlignment="Center" 
            Margin="0,35,0,0" 
            FontSize="20" 
            FontWeight="Bold" 
            VerticalAlignment="Top"/>
        
        <Button 
            Grid.Row="0"
            Content="Tilbage"
            Foreground="Black"
            Background="Yellow"
            HorizontalAlignment="center" 
            VerticalAlignment="Center"
            Width="45"
            Height="25"
            Margin="700,40,48,0" 
            Click="GoToNextWindow_Click"/>
        
        <!--Delete members box -->
        <TextBox 
            x:Name="EnterMember" 
            Grid.Row="0"
            HorizontalAlignment="Center" 
            Margin="450,45,0,0" 
            TextWrapping="Wrap" 
            Text="" 
            VerticalAlignment="Center" 
            Width="120"/>
        
        <!--Delete members -->
        <Button 
            x:Name="DeleteMemberButton" 
            Foreground="White" 
            Background="Red" 
            Width="50"
            Content="Slet" 
            HorizontalAlignment="Center" 
            Margin="450,0,0,0" 
            Grid.Row="0" 
            VerticalAlignment="Center" 
            Click="DeleteMemberButton_Click"/>
        
        <!-- Sidney Fun Button -->
        <Button 
            Grid.Row="0"
            Content="Button" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Center" 
            Margin="50,0,0,0" 
            />
        
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="589,88,0,0" 
            Grid.Row="1" 
            TextWrapping="Wrap" 
            Text="Tast medlemmets ID for at slette det" 
            VerticalAlignment="Top"/>

    </Grid>
</Window>