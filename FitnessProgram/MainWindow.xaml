<Window x:Class="FitnessProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="Black">

        <!-- Grid layout = 3 Rows 
        to make everything stick in place-->
        <Grid.RowDefinitions>
            <!-- *Row 0* Title Area-->
            <RowDefinition Height="100"/>
            <!-- *Row 1* Subtitle area -->
            <RowDefinition Height="40"/>
            <!-- *Row 2* text to login-->
            <RowDefinition Height="60"/>
            <!-- *Row 3* Login area box and button -->
            <RowDefinition Height="95"/>
        </Grid.RowDefinitions>

        <!-- Text -->
        <!-- Titel-->
        <TextBlock Text="Fitness-Center"
                   FontSize="50"
                   Foreground="LightBlue"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Grid.Row="0"/>

        <!-- Subtitel-->
        <TextBlock Text="Sidney og Philip"
                   FontSize="25"
                   Foreground="Purple"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Grid.Row="1"/>

        <!-- Login info-->
        <TextBlock Text="Bruger navn og kodeord:"
                   FontSize="15"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Grid.Row="2"/>

        <!-- Centered StackPanel for Password and Button
        to make them stay where we want when resizing the window-->
        <StackPanel Grid.Row="3"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <!-- Password -->
            <PasswordBox x:Name="PasswordInput"
                     Background="DarkGray"
                     Height="50"
                     Width="200"/>

            <!-- Login Button -->
            <Button x:Name="LoginButton"
                Content="login"
                Click="Button_Click"
                Foreground="Black"
                Background="LightGreen"
                Height="40"
                Width="100"/>
        </StackPanel>

    </Grid>
</Window>