<Window x:Class="FitnessProgram.MemberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessProgram"
        mc:Ignorable="d"
        Title="MemberWindow" Height="450" Width="800">
    <Grid Background="Black">

        <!-- Grid row layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- row 0 -->
            <RowDefinition Height="*"/>
            <!-- row 1-->
        </Grid.RowDefinitions>
        
        <!--Printer listen af medlemmmer ud-->
        <TextBlock 
            Grid.Row="1"
            x:Name="MemberBlock" 
            Foreground="White"
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            Margin="0,0,0,0" 
            TextWrapping="Wrap" 
            Text="TextBlock"/>
        
        <Label 
            Grid.Row="0"
            Content="Medlemmer" 
            Foreground="White"
            HorizontalAlignment="Center" 
            Margin="0,35,0,0" 
            FontSize="20" 
            FontWeight="Bold" 
            VerticalAlignment="Top"/>
        
        <Button 
            Grid.Row="0"
            Content="Tilbage" 
            Background="LightGreen"
            HorizontalAlignment="Right" 
            VerticalAlignment="Center"
            Width="45"
            Height="25"
            Margin="0,40,48,0" 
            Click="BackButton_Click"/>
        <TextBox x:Name="EnterMember" HorizontalAlignment="Left" Margin="632,117,0,0" Grid.Row="1" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="DeleteMemberButton" Content="Button" HorizontalAlignment="Left" Margin="675,140,0,0" Grid.Row="1" VerticalAlignment="Top" Click="DeleteMemberButton_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="730,82,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>